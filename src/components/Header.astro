---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import dextools from '/dextools.svg'
import telegram from '/telegram.svg'
import twitter from '/twitter.svg'

---

<header>
	<nav>
		<h5><a href="/">{SITE_TITLE}</a></h5>
		<div class="alo">
			<HeaderLink href="/welcum">WELCOME TO $GAS</HeaderLink>
			<HeaderLink href="/howbuywife">HOW TO BUY</HeaderLink>
			<HeaderLink href="/about">ABOUT</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.dextools.io/app/en/ether/pair-explorer/0x" target="_blank">
				<span class="sr-only">$GAS DEXTOOLS</span>
				<img src={dextools} />
			</a>
			<a href="https://x.com/gascoineth" target="_blank">
				<span class="sr-only">$GAS TWITTER/X</span>
				<img src={twitter} />
			</a>
			<a href="https://t.me/" target="_blank">
				<span class="sr-only">$GAS TELEGRAM</span>
				<img src={telegram} />
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: black;
		box-shadow: 0 2px 8px rgba(var(--white), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
