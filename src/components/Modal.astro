---
const {id, open} = Astro.props;
---
<style lang="scss">
dialog {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: black;
  &::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(251, 0, 255, 0.48);
  }
}

</style>

<button onclick={`window.${id}.showModal()`}>{open}</button>

<dialog id={id}>
  <slot name="main" />
  <form method="dialog">
    <slot name="yes" />
    <slot name="no" />

  </form>
</dialog>